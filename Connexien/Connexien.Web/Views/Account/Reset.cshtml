@model Connexien.Web.Models.PasswordResetModel
@{
    ViewBag.Title = "Password Reset";
    Layout = "~/Views/Shared/_BgLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <div class="wizard-card">
                <div class="modal-header">
                    <h4 class="modal-title">Password Reset</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Reset", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
                    {
                        @Html.HiddenFor(x => x.Email)
                        @Html.HiddenFor(x => x.UserId)

                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, "Password")
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.ValidatePassword, "Confirm Password")
                            @Html.PasswordFor(x => x.ValidatePassword, new { @class = "form-control", placeholder = "Confirm Password" })
                            @Html.ValidationMessageFor(x => x.ValidatePassword)
                        </div>

                        <hr />
                        <button class="btn btn-lg btn-primary btn-block btn-submit" type="submit" data-loading-text="Resetting...">Reset Password</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

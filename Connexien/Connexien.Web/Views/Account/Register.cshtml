@model Connexien.Web.Models.RegisterModel
@{
    ViewBag.Title = "Connexien Registration";
    Layout = "~/Views/Shared/_BgLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <div class="wizard-card">
                <div class="modal-header">
                    <h4 class="modal-title" id="groupModalLabel">Create a Connexien Account</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-register", role = "form" }))
                    {
                        @Html.HiddenFor(x => x.RegistrationType)
                        <div class="form-group">
                            @Html.LabelFor(x => x.Firstname, "First Name")
                            @Html.TextBoxFor(x => x.Firstname, new { @class = "form-control", placeholder = "First Name", autofocus = "" })
                            @Html.ValidationMessageFor(x => x.Firstname)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Lastname, "Last Name")
                            @Html.TextBoxFor(x => x.Lastname, new { @class = "form-control", placeholder = "Last Name", autofocus = "" })
                            @Html.ValidationMessageFor(x => x.Lastname)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, "Email Address")
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", autofocus = "" })
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, "Password")
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.ConfirmPassword, "Confirm Password")
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        </div>
                        <hr />
                        <button class="btn btn-lg btn-primary btn-block btn-submit" type="submit" data-loading-text="Registering...">Sign Up</button>
                    }
                    <br />
                    <p class="text-center text-muted">
                        By clicking sign up, you are indicating that you have read<br />and agreed to the <a href="https://www.connexien.com/terms-of-service" style="text-decoration: underline;color:Blue;">Terms of Service</a>.
                    </p>
                    <hr />
                    <div class="text-center">
                        Already have an account? @Html.ActionLink("Sign In", "Login", "Account", new { style = "text-decoration:underline; color:blue;" })<br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

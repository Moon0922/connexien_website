<hr/>
<div class="wrap">
    <p>
        Do you currently have any Self-Regulatory Organization (SRO) or NASAA licenses or registrations?<br/>               
        <label class="toggle-show">@Html.RadioButtonFor(m => m.LicenseBit, "true") Yes</label>&nbsp;&nbsp;
        <label class="toggle-hide">@Html.RadioButtonFor(m => m.LicenseBit, "false") No</label>
    </p>
    <div class="toggle-hidden">
        <div class="form-group">
            @Html.LabelFor(x => x.Licenses, "Select any/all active licenses & registrations currently held:")
            <select style="display:none;"></select> @*Below list box does not populate if this blank box is remove... weird *@
            @Html.ListBoxFor(x => x.Licenses, new MultiSelectList(OptionModel.GetLicenses(Model.Licenses), "Value", "Text"), new { @class = "chosen", multiple = "" })
            <small class="text-muted">Click on the box again to select multiple options.</small>
        </div>
    </div>
</div>
<div class="wrap">
    <p>
        Do you currently have any industry related designations?<br/>        
        <label class="toggle-show">@Html.RadioButtonFor(m => m.DesigBit, "true") Yes</label>&nbsp;&nbsp;
        <label class="toggle-hide">@Html.RadioButtonFor(m => m.DesigBit, "false") No</label>
    </p>
    <div class="toggle-hidden">
        <div class="form-group">
            @Html.LabelFor(x => x.Designations, "Select any/all active designations currently held:")
            <select style="display:none;"></select> @*Below list box does not populate if this blank box is remove... weird *@
            @Html.ListBoxFor(x => x.Designations, new MultiSelectList(OptionModel.GetDesignations(Model.Designations), "Value", "Text"), new { @class = "chosen", multiple = "" })
            <small class="text-muted">Click on the box again to select multiple options.</small>
        </div>
    </div>
</div>
<div>
    <p>
        Do you have any investment related disclosures or disciplinary history?<br/>               
        <label class="toggle-show">@Html.RadioButtonFor(m => m.HistoryBit, "true") Yes</label>&nbsp;&nbsp;
        <label class="toggle-hide">@Html.RadioButtonFor(m => m.HistoryBit, "false") No</label>
    </p>
    <div>
        *For licensed personnel, you may review the background and/or disciplinary history at <a href="http://www.brokercheck.com" target="_blank">www.brokercheck.com</a>
    </div>
</div>
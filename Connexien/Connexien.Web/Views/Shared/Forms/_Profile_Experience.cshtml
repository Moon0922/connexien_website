@using Connexien.Web.Models
@model ProfileModel


<div class="form-group">
    @Html.LabelFor(x => x.Experience, "Industry Experience")
    <select class="form-control" id="Experience" name="Experience" data-selected="@Model.Experience">
        <option>1-5 years</option>
        <option>6-10 years</option>
        <option>11-15 years</option>
        <option>16-20 years</option>
        <option>20+ years</option>
    </select>
    @Html.ValidationMessageFor(x => x.Experience)
    <small class="text-muted">Select # of years of experience in the Financial Services Indrustry</small>
</div>
<div class="form-group">
    @Html.LabelFor(x => x.Engagements, "Number of Engagements Completed")
    <select class="form-control" id="Engagements" name="Engagements" data-selected="@Model.Engagements">
        <option>1-25</option>
        <option>26-50</option>
        <option>51-100</option>
        <option>100+</option>
    </select>
    @Html.ValidationMessageFor(x => x.Engagements)
</div>
<hr/>
<div class="form-group">
    @Html.LabelFor(x => x.EdLevel, "Highest Level of Education")
    <select class="form-control" id="EdLevel" name="EdLevel" data-selected="@Model.EdLevel">
        <option>No College</option>
        <option>Some College (No Degree)</option>
        <option>Undergraduate Degree(s)</option>
        <option>Postgraduate Degree(s)</option>
    </select>
    @Html.ValidationMessageFor(x => x.EdLevel)
</div>
<div class="form-group">
    @Html.LabelFor(x => x.SchoolName, "Name of College/University")
    @Html.TextBoxFor(x => x.SchoolName, new { @class = "form-control", placeholder = "Name of College/University", autofocus = "" })
    @Html.ValidationMessageFor(x => x.SchoolName)
</div>
<div class="form-group">
    @Html.LabelFor(x => x.DegreeMajor, "Degree Type/Major")
    @Html.TextBoxFor(x => x.DegreeMajor, new { @class = "form-control", placeholder = "Degree Type/Major", autofocus = "" })
    @Html.ValidationMessageFor(x => x.DegreeMajor)
</div>

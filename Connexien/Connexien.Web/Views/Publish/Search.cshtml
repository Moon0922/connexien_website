@using Connexien.Web.Models
@model List<PublicationModel>
@{
    ViewBag.Title = "Connexien: Publishing";
    
}


<style>
    
    body {background:#f5f5f5;}

    .media-body 
    {
        padding: 6px 0 0 2px;
    }
    
</style>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4">
            @Html.Partial("_Filters", new PublicationModel { Title = ViewBag.Search })
        </div>
        <div id="searchWrap" class="col-xs-12 col-sm-8 col-md-8">
            @Html.Partial("_Results", Model)
        </div>
    </div>
</div>




@section scripts {
    <script>

        $(function () {

            $("#form-filter input, #form-filter select").change(function () {
                $(this).closest("form").submit();
            });
        });
    
    </script>
}

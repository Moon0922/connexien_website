@{
    ViewBag.Title = "Connexien: Customized Form Service";
    Layout = "~/Views/Shared/_SplashLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <div class="wizard-card">
                <div class="modal-header">
                    <h3 class="modal-title text-center">
                        Welcome to Form Builder
                    </h3>
                </div>
                <div class="modal-body text-center">
                    <p>
                        Do you need customized forms, documents or checklists that are specific to your business? We understand
                        that every firm’s business is unique and not all standardized forms and documents will meet those needs.
                        Our Form Builder service builds customized forms the way you want them. To get started, simply create your profile,
                        tells us what you want, and we'll build it to your specifications.  Get started today!
                    </p>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6" style="padding-top:10px">
                            <a id="alreadyHaveAccount" href="@Url.Action("Login","Account", new { ReturnUrl = Url.Action("Login","Account") })" class="btn btn-default btn-block">Already have an Account? Click Here.</a>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6" style="padding-top:10px">
                            <a id="startApplication" href="@Url.Action("Register", "Account")" class="btn btn-primary btn-submit btn-block">Click here to get started</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>